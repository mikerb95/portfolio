{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Next.js",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "custom",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*ready - started server on.*",
            "endsPattern": ".*ready - started server on.*"
          }
        }
      ]
    }
  ]
}
